// Test Timer class
#include <iostream>
#include "Tmatrix.h"
#include "Tvector.h"
#include "Tsparse_vector.h"
#include "Tsparse_matrix.h"
#include "Timer.h"

using namespace std;

int main()
{
    cout << "----- TESTING Timer -----" << endl;

    TNoddy::Timer timer;								// Create a Timer object
	timer.start();										// Start the timer

    /* ----- Sparse linear system ----- */

    size_t N = 100000;
    TNoddy::Tsparse_matrix<double> A_matrix(N,N);
    for (size_t i=0; i<N; ++i)
    {
            A_matrix(i,i) = 0.435 * (i + 1.0);
    }

    TNoddy::Tvector<double> B_vector(N,0.435);
    TNoddy::Tvector<double> X_vector(N,0.0);
    
	X_vector = A_matrix.solve( B_vector );


    timer.print();                                      // Output time to screen 
	timer.stop();                                       // Stop the timer

	cout << "FINISHED" << endl;

}
